
<% if flash.has?(:message) %>
  <h2><%= flash[:message] %></h2>
<% end %>


<h2><%= @song.name %></h2>
<a href='/artists/<%= @song.artist.slug%>' id="artist_name"><%= @song.artist.name %></a>
<% @song.genres.each do |genre| %>
  <a href='/genres/<%= genre.slug %>' id="genre_name"><%= genre.name %></a>
<% end %>
